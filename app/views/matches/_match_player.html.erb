<span class="text-gray-500 text-xs">#<%= match_player.player.id %></span>
<%= match_player.player.name %>

<% if match_player.elo_change.present? %>
  <span class="text-gray-500 text-xs">
    (<%= match_player.elo_change.current_elo %>)
  </span>

  <span class="text-xs rounded-full p-1 w-10 h-10 <%= match_player.elo_change.value.positive? ? "text-green-600" : "text-red-600" %>">
    <% if match_player.elo_change.value.positive? %>
      <span>+</span>
    <% end %>
    <%= match_player.elo_change.value %>
  </span>
<% else %>
  <p class="text-xs text-gray-300">No elo change saved.</p>
<% end %>

<% if match_player.player_stat.present? %>
  <div class="text-gray-500 text-xs">
    <span title="Goals">
      <%= match_player.player_stat.goals %> |
    </span>
    <span title="Assists">
      <%= match_player.player_stat.assists %> |
    </span>
    <span title="Own goals">
      <%= match_player.player_stat.own_goals %>
    </span>
  </div>
<% end %>
